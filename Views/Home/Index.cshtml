@{
    Layout=null;
    ViewData["Title"] = "Home Page";
}
<head>
    <!-- Include CSS -->
    <link rel="stylesheet" type="text/css" href="/css/index.css" />
    
    <!-- Include Javascript -->
    <script src="/js/index.js"></script>

    <!-- Include JQuery -->
    <script src="//code.jquery.com/jquery-3.4.1.min.js"></script>
    
    <!-- Connect firebase -->
    <script src="https://www.gstatic.com/firebasejs/8.6.2/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.6.2/firebase-analytics.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.6.2/firebase-database.js"></script>
    <script src="/fb/conn.js" type="text/javascript"></script>

</head>
<body>
    <div id="test">
        <p>환율</p>
        <script>rate()</script>
    </div>

    <div class="login-form">
        <table style="text-align: center; margin-left: auto; margin-right: auto;">
            <tr>
                <td class="input-board">
                    <input class="input_box" type="text" name="id" id="id" placeholder="아이디" required>
                </td>
                <td class="" rowspan="2">
                    <button class="login-Btn" onclick="login()" >로그인</button>
                </td>
            </tr>
            <tr>
                <td class="input-board">
                    <input class="input_box" type="password" name="pwd" id="pwd" placeholder="비밀번호" required>
                </td>
            </tr>
            <tr>
                <td>
                    <button class="click" onclick="">아이디 찾기</button>
                </td>
                <td>
                    <button class="click" onclick="">비밀번호 찾기</button>
                </td>
                <td>
                    <button class="click" onclick="goJoin()">회원가입</button>
                </td>
            </tr>
        </table>
    </div>


    

</body>
