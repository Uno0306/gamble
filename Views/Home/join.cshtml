<head>
    <script src="/js/join.js"></script>
     <script src="https://www.gstatic.com/firebasejs/8.6.2/firebase-app.js"></script>
     <script src="https://www.gstatic.com/firebasejs/8.6.2/firebase-analytics.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.6.2/firebase-database.js"></script>
    <script src="/fb/conn.js" type="text/javascript"></script>
    
    <script src="//code.jquery.com/jquery-3.4.1.min.js"></script>

</head>
<body>
    <div style="text-align: center;">
        <table style="text-align: center; margin-left: auto; margin-right: auto;">
            <tr>
                <td class="input-board">
                    <input class="input_box" type="text" name="id" id="id" placeholder="아이디" required>
                </td>
                <td class="" >
                    <button class="" onclick="checkId()" >중복확인</button>
                </td>
            </tr>
            <tr>
                <td class="input-board">
                    <input class="input-box" type="password" name="pwd" id="pwd" placeholder="비밀번호" required>
                </td>
            </tr>
            <tr>
                <td class="input-board">
                    <input class="input-box" type="password" name="pwdChk" id="pwdChk" placeholder="비밀번호 확인" required>
                </td>
            </tr>
            <tr>
                <td class="input-board">
                    <input class="input-box" type="text" name="name" id="name" placeholder="이름" required>
                </td>
            </tr>
            <tr>
                <td class="input-board">
                    <input class="input-box" type="number" name="money" id="money" placeholder="금액" required>
                    <select name="unit" id="unit">
                        <option value="WON">WON</option>
                        <option value="USD">USD</option>
                        <option value="EUR">EUR</option>
                        <option value="JPY">JPY</option>
                        <option value="CNY">CNY</option>
                    </select>    
                </td>
            </tr>
            <tr>
                <td>
                <button class="" onclick="join()">회원가입</button>
                </td>
            </tr>
        </table>
    </div>
</body>